{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "lib",
  },
  "include": ["./src/**/*", "./package.json"]
}
